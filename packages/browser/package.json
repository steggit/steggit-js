{
  "name": "@steggit/browser",
  "version": "1.0.0",
  "description": "Browser bindings for core module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist/",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "test": "jest",
    "build:wasm": "bash ./build.sh",
    "bundle": "tsup src/index.ts --outDir dist --format esm,cjs --platform browser --dts --external dist/steggit_emcc.js",
    "build": "yarn bundle && yarn build:wasm"
  },
  "author": "james-cohen",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^22.13.11",
    "babel-plugin-jest-hoist": "^29.6.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-esbuild": "^0.3.0",
    "ts-jest": "^29.2.6",
    "tsup": "^8.4.0",
    "typescript": "^5.8.2"
  }
}
