{
  "name": "@steggit/node",
  "version": "0.1.0",
  "description": "Node bindings for image steganography",
  "main": "./lib/index.js",
  "module": "./lib/index.mjs",
  "types": "./lib/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "lib",
    "src",
    "LICENSE",
    "README.md"
  ],
  "exports": {
    ".": {
      "require": "./lib/index.js",
      "import": "./lib/index.mjs",
      "types": "./lib/index.d.ts"
    }
  },
  "scripts": {
    "test": "jest",
    "cp:core": "mkdir -p src && cp -r ../core/src/* src/ && cp -r ../core/include/* src/",
    "build": "yarn cp:core && node-gyp configure build",
    "install": "yarn cp:core && node-gyp-build",
    "prebuild": "yarn prebuildify --napi"
  },
  "author": "james-cohen",
  "license": "MIT",
  "gypfile": true,
  "devDependencies": {
    "jest": "^29.7.0",
    "prebuildify": "^6.0.1",
    "ts-jest": "^29.2.6"
  },
  "peerDependencies": {
    "node-gyp": "^11.1.0"
  },
  "dependencies": {
    "node-gyp-build": "^4.8.4"
  }
}
