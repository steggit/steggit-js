{
  "name": "@steggit/utils",
  "description": "Utils for Steggit",
  "scripts": {
    "test": "jest",
    "build": "tsup src/index.ts --outDir dist --format esm,cjs --platform node --dts"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist/",
    "LICENSE",
    "README.md"
  ],
  "jest": {
    "collectCoverageFrom": [
      "src/**"
    ],
    "transform": {
      "^.+\\.tsx?$": [
        "@cloudventure/jest-transformer-esbuild"
      ]
    }
  },
  "devDependencies": {
    "@cloudventure/jest-transformer-esbuild": "^1.0.13",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.11",
    "babel-plugin-jest-hoist": "^29.6.3",
    "dotenv": "^16.4.7",
    "jest": "^29.7.0",
    "tsup": "^8.4.0",
    "typescript": "^5.8.2"
  }
}
