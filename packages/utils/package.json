{
  "name": "@steggit-js/utils",
  "version": "0.2.0",
  "description": "Utility functions for Steggit",
  "scripts": {
    "test": "node --experimental-vm-modules $(yarn bin jest)",
    "build": "tsup src/index.ts --outDir dist --format esm,cjs --platform node --dts"
  },
  "publishConfig": {
    "access": "public"
  },
  "types": "./dist/index.d.ts",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/steggit/steggit-js.git"
  },
  "author": "james-cohen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/steggit/steggit-js/issues"
  },
  "homepage": "https://github.com/steggit/steggit-js/tree/main/packages/utils",
  "keywords": [
    "steggit",
    "steggit-js",
    "steganography",
    "encryption",
    "messaging",
    "image",
    "hidden",
    "node",
    "browser"
  ],
  "devDependencies": {
    "@types/node": "^22.14.0",
    "babel-plugin-jest-hoist": "^29.6.3",
    "jest": "^29.7.0",
    "jest-esbuild": "^0.3.0",
    "ts-jest": "^29.3.1",
    "tsup": "^8.4.0",
    "typescript": "^5.8.2"
  }
}
