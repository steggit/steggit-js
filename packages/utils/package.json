{
  "name": "@steggit/utils",
  "description": "Utils for Steggit",
  "scripts": {
    "test": "jest",
    "build": "tsup src/index.ts --outDir dist --format esm,cjs --platform node --dts"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist/",
    "LICENSE",
    "README.md"
  ],
  "jest": {
    "collectCoverageFrom": [
      "src/**"
    ],
    "transform": {
      "^.+\\.tsx?$": [
        "jest-esbuild"
      ]
    }
  },
  "devDependencies": {
    "babel-plugin-jest-hoist": "^29.6.3",
    "jest": "^29.7.0",
    "jest-esbuild": "^0.3.0",
    "tsup": "^8.4.0",
    "typescript": "^5.8.2"
  }
}
