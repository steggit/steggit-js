{
  "name": "@steggit/utils",
  "description": "Utils for Steggit",
  "scripts": {
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "build:esm": "bash ./bundle.sh esm",
    "build:cjs": "bash ./bundle.sh cjs",
    "build": "yarn build:esm && yarn build:cjs"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist/",
    "LICENSE",
    "README.md"
  ],
  "jest": {
    "collectCoverageFrom": [
      "src/**"
    ],
    "transform": {
      "^.+\\.tsx?$": [
        "@cloudventure/jest-transformer-esbuild"
      ]
    },
    "setupFiles": [
      "./jest.setup.js"
    ]
  },
  "devDependencies": {
    "@cloudventure/jest-transformer-esbuild": "^1.0.13",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "babel-plugin-jest-hoist": "^29.6.3",
    "dotenv": "^16.4.7",
    "esbuild": "^0.25.1",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "tsc": "^2.0.4",
    "typescript": "^5.8.2"
  }
}
