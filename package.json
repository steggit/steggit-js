{
  "name": "steggit-js",
  "version": "1.0.0",
  "description": "Monorepo for Stegg.it",
  "main": "index.js",
  "private": true,
  "scripts": {
    "git:clean": "git fetch --prune && bash ./scripts/delete-merged-branches.sh",
    "init:dev": "yarn mysql:start && yarn appsync:offline",
    "postinstall": "husky",
    "commit:staged": "commit",
    "commit:all": "git add . && commit",
    "prepare": "husky",
    "release": "multi-semantic-release",
    "lint:utils": "eslint packages/utils",
    "lint:browser": "eslint packages/browser",
    "lint:node": "eslint packages/node",
    "lint:core": "eslint packages/core",
    "lint:all": "yarn lint:utils && yarn lint:browser && yarn lint:node && yarn lint:core",
    "build:core": "yarn workspace @steggit/core build",
    "build:browser": "yarn workspace @steggit/browser build",
    "build:node": "yarn workspace @steggit/node build",
    "build:utils": "yarn workspace @steggit/utils build",
    "build:all": "yarn build:core && yarn build:node && yarn build:browser && yarn build:utils"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/james-cohen/steggit.git"
  },
  "author": "james-cohen",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/james-cohen/steggit/issues"
  },
  "homepage": "https://github.com/james-cohen/steggit#readme",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "multi-release": {
    "ignorePrivate": false
  },
  "packageManager": "yarn@4.7.0",
  "devDependencies": {
    "@anolilab/multi-semantic-release": "^1.1.10",
    "@babel/core": "^7.26.10",
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@commitlint/prompt-cli": "^19.7.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/babel__core": "^7",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.11",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "babel-plugin-jest-hoist": "^29.6.3",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.1.7",
    "jest-util": "^29.7.0",
    "prettier": "^3.5.3",
    "semantic-release": "^24.2.1",
    "semantic-release-replace-plugin": "^1.2.7",
    "tsup": "^8.4.0",
    "typescript": "^5.8.2"
  },
  "stableVersion": "1.0.0"
}
